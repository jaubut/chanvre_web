#modalA.modal.green(role='dialog', aria-labelledby='modalA-title', aria-describedby='modalA-description')
  .container
        a.modal-a(href='#', title='close') ×
      .row
        .col-12.center
            h2 La boutique est lancée !
        .col-6
            for produit, slug in public.produits._data
                if _.includes(produit.id, '3')
                    a(href= "/produits/#{ slug }")
                        .blogshow(style= produit.imagebg)
                                .produitindex
                                    .col-6.left
                                        p(style='color: #000;') #{produit.headline}
                                    .col-6.right
                                        p(style='color: #000;').price #{produit.price}$ 

        .col-6
            p Et pour célébré, recevez la <strong>#[a(href='/produits/decouverte') Trousse Découverte]</strong> à 50% de rabais à l'achat de n'importe quel produit.
            a(href="/boutique")
                button.btn-offre Voir l'offre
            
  
#produits
    .container
            .row.center
                    //- var feuille = public.lafeuille._data[public.lafeuille._contents[0].toString().replace('.html', '')]  
                          include ../public/lafeuille/_lafeuille
                    //.col-4.hidden
                    //- var numero = public.seqoia._data[public.seqoia._contents[0].toString().replace('.html','')] 
                          include ../public/seqoia/_seqoia
                    for produit, slug in public.produits._data
                        if _.includes(produit.id, '3')
                            include ../public/produits/_produit
                    for produit, slug in public.produits._data
                        if _.includes(produit.id, '1')
                            include ../public/produits/_produit 
                    for produit, slug in public.produits._data
                        if _.includes(produit.id, '2')
                            include ../public/produits/_produit
