-
    var produits = {
        feteMeres : _.pick(public.produits._data,function(produit){
            return _.includes(produit.tag, 'fetemere');
        }),
        soinsCorps : _.pick(public.produits._data,function(produit){
            return _.includes(produit.category, 'soinscorps');
        }),
        textile: _.pick(public.produits._data,function(produit){
            return _.includes(produit.category, 'textile');
        })
    };

#produits
    include ../includes/_header
    include ../includes/_description
    .jumbotron.fete-mere-container
        .container
            .row
                .col-12
                    h2(style="color: black;") Pour la fête des mères, on vous offre ces 3 produits à petit prix ! <a href="fete-mere"><span class="price">$69</span></a>
                for produit, slug in produits.feteMeres
                    include _produit-fetemere
                .col-12
                    .center
                        a(href="fete-mere")
                            button.btn-fetemere Voir l'offre
    #filtered-products.container
        .row.center
            .col-2.product__filter
                menu filter
                input.product__filter-search
            .col-10
                for produit, slug in public.produits._data
                    include _produit
    //#soinspourlecorps.container
        .row.center
            h2 Soins pour le corps
            for produit, slug in produits.soinsCorps
                include _produit
    //#vetementseqoia.container
        .row.center
            h2 Textile
            for produit, slug in produits.textile
                include _produit
    //#superaliment.container
        .row.center
            h2 Alimentation
            for produit, slug in public.produits._data
                if _.includes(produit.category, 'alimentaire')
                    include _produit