                                img(src="https://farm5.staticflickr.com/4424/36450360214_8931b98387_z.jpg")
                        .col-4
                            a(href="#img2")
                                img(src= "https://farm5.staticflickr.com/4345/36904397856_e3c366b3a4.jpg")
                            a(href="#_" class="lightbox" id="img2")
                                img(src= "https://farm5.staticflickr.com/4345/36904397856_e3c366b3a4.jpg")
