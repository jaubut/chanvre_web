#produitsfull
    include ../includes/_header
    //include ../includes/_description
    .container
            .row.center  
                    .col-8
                        .col-12
                            img(src= image)
                        .col-4
                            img(src= "https://storage.googleapis.com/chanvrequebecphoto/seqoiamenu2 copy.jpg")
                        .col-4
                            img(src= image)
                        .col-4
                            img(src= image)
                    .col-4
                        .col-12.center
                            h2.left= name
                            h3.left #{price}$
                            p.left= description
                            br
                            select#my-size
                                  option Small
                                  option Medium
                                  option Large
                            br
                            button#my-button.btn-secondary.snipcart-add-item(
                            data-item-id= id, 
                            data-item-name= name, 
                            data-item-price= price, 
                            data-item-weight= weight, 
                            data-item-url= url, 
                            data-item-custom2-name='Size', 
                            data-item-custom2-options='Small|Medium|Large',
                            data-item-description= description) Ajouter
                    .col-12
                        img.big(src= image)
    include ../includes/_footer