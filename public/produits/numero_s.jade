#produitsfull
    include ../includes/_header
    //include ../includes/_description
    .container
            .row.center  
                    .col-8
                        .col-12
                            a(href="#img1")
                                img(src= image)
                            a(href="#_" class="lightbox" id="img1")
                                img(src= image)
                        .col-4
                            a(href="#img2")
                                img(src= "https://storage.googleapis.com/chanvrequebecphoto/seqoiamenu2 copy.jpg")
                            a(href="#_" class="lightbox" id="img2")
                                img(src= "https://storage.googleapis.com/chanvrequebecphoto/seqoiamenu2 copy.jpg")
                        .col-4
                            a(href="#img3")
                                img(src= image)
                            a(href="#_" class="lightbox" id="img3")
                                img(src= image)
                        .col-4
                            a(href="#img4")
                                img(src= image)
                            a(href="#_" class="lightbox" id="img4")
                                img(src= image)
                    .col-4
                        .col-12.center
                            h2.left= name
                            h3.left #{price}$
                            p.left= description
                            br
                            select#my-size
                                  option Small
                                  option Medium
                                  option Large
                            br
                            //input#my-quantity(type='number')
                            br
                            button#my-button.btn-secondary.snipcart-add-item(
                            data-item-id= id, 
                            data-item-name= name, 
                            data-item-price= price, 
                            data-item-weight="0",
                            data-item-taxes="TPS|TVQ", 
                            data-item-url= url, 
                            data-item-quantity="1",
                            data-item-custom2-name='Size', 
                            data-item-custom2-options='Small|Medium|Large',
                            data-item-description= description) Ajouter
                            .col-12.center
                                .fb-like(data-href='https://www.chanvrequebec.com/#{ link }', data-layout='button_count', data-action='like', data-size='small', data-show-faces='true', data-share='true')
