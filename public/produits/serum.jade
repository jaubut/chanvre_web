    .container
            .row.center  
                    .col-8
                        .col-12
                            a(href="#img1")
                                img(src= "https://c1.staticflickr.com/1/649/32469615764_3def07790a_k.jpg")
                            a(href="#_" class="lightbox" id="img1")
                                img(src= "https://c1.staticflickr.com/1/649/32469615764_3def07790a_k.jpg")
