// Begin MailChimp Signup Form
.container
    .row
        .col-12
            h4 Notre lettre de nouvelles, inscrivez-vous, c'est gratuit :)
            h2.center Honnêtement, on ne partage que le meilleur !
            #mc_embed_signup.center
              form#mc-embedded-subscribe-form.validate(action='//chanvrequebec.us14.list-manage.com/subscribe/post?u=9572de6ab8b677f9efe10c408&id=d088a85c93', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
                #mc_embed_signup_scroll
                  .mc-field-group
                    label(for='mce-EMAIL')  
                    input.center#mce-EMAIL.required.email(type='email', value='', name='EMAIL', placeholder='Courriel')
                  .mc-field-group
                    label(for='mce-FNAME')
                    input.center#mce-FNAME(type='text', value='', name='FNAME', placeholder='Prénom')
                  #mce-responses.clear
                    #mce-error-response.response(style='display:none')
                    #mce-success-response.response(style='display:none')
                  // real people should not fill this in and expect good things - do not remove this or risk form bot signups
                  button#mc-embedded-subscribe.btn-secondary(type='submit', value='Subscribe', name='subscribe') Rejoindre
// End mc_embed_signup
