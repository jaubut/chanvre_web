header
    #header
        .jumbotron(style=(headerstyle))
            .container
                    .row
                        .home
                              .dropdown
                              i.fa.fa-bars.dropbtn(onclick='myFunction()')
                              #myDropdown.dropdown-content
                                    a(href='/mission') À propos
                                    a(href='/equipe') L'équipe
                                    a(href='/blog') Blogue
                                    a(href='/artistes') Artisans
                                    a(href='/produits') Boutique
                                    a(href='/recettes') Recettes
                                    a(onclick='myFunctionTwo()') Les 4 fantastiques
                                    #yourDropdown.dropdown-content
                                            a(href='/alimentation') Alimentation
                                            a(href='/habitation') Habitation
                                            a(href='/soinscorporels') Soins Corporels
                                            a(href='/textile') Textile
                                    a(href='/contactez-nous') Contact
                              a.goback(href='/index')
                                i.fa.fa-home.i-header(aria-hidden='true')
                              a.goback.snipcart-checkout.snipcart-summary(href='#')
                                i.fa.fa-shopping-cart.i-header(aria-hidden='true')
                                    span.snipcart-total-price
                              a.goback.snipcart-user-profile(href='#')
                                i.fa.fa-user.i-header
                        .col-12.center
                            img(src=(source), alt='chanvre quebec')
                            h1(style=(textcolor))=(headline)
                            h2.font-light(style=(textcolor))=(underline)
                            br
                            a(href=(hrefheader))
                                button.btn-secondary #{thirdline}

