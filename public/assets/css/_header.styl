#header
    img 
        height 5rem
        width auto
    
    .home
        position fixed
        top 0
        left 0
        background-color white
        box-shadow 0px 1px 2px 0px #D6D6D8
        z-index 100 !important
        padding-top 7.5px
        padding-bottom 7.5px
        padding-left 40px
        width 100vw
        
    .goback
        cursor pointer
        padding-left 20px
        padding-right 20px
    .snipcart-total-price
        padding-left 20px
        font-size 0.75rem
        color #636366
    .dropbtn
        color #636366
        font-size 16px
        padding-left 20px
        padding-right 20px
        border none
        cursor pointer
    .dropbtn:hover, .dropbtn:focus

    .dropdown
        position relative
        display inline-block

    .dropdown-content
        display none
        background white
        position absolute
        width 100%
        padding-left 40px
        left 0
        a
            color #636366
            font-size 1rem
            padding-top 5px
            text-decoration none
            display block
            &:hover
                background-color #f1f1f1
                padding-left 20px

    .show
        display block
#alert
        background-color #F9B42D
        position absolute
        top 0
        left 0
        z-index 110 !important
        width 100%
        overflow scroll
        p
            font-size 0.75rem
            color white
        
#blogheader
    .goback
        cursor pointer
        padding-left 20px
    img 
        height 5rem
        width auto
    .credit-photo
        position absolute
        top 0
        right 0
        margin-top 5px
        margin-right 5px
        color #636366
        text-shadow 1px 1px white
        font-size 0.75rem
    @media (min-width: 800px)
        .side-image
            background-size cover
            background-position center center
            background-repeat no-repeat
            z-index 100 !important
            position fixed
            top 0
            right 0
            height 100%
            width 30%
            color blue
    @media (max-width: 800px)
        .side-image
            background-size cover
            background-position center center
            background-repeat no-repeat
            z-index 100 !important
            height 20rem
            width 100%
            position relative
            color blue
            
body
    padding 0
