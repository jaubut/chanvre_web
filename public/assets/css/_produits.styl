.artiste-by
    text-align left
    margin-top -35px
.retour-b
    padding-left 60px
    font-size 0.75rem
    text-align center
#produits 
    img
        background-size cover
        background-position center center
        background-repeat no-repeat
        max-height 200px
        cursor zoom-in
         
        
    .btn-secondary
          border 1px solid #3E7BFE
          background #3E7BFE
          color white
          &:hover
            border 1px solid #23b39d
            background #23b39d
            color white
#produitsfull
    img
        max-height auto
        max-width 100%
        border-radius 10px
        .cursor
            cursor zoom-in
    .big
        max-height auto
        width 70vw
         
        
    .btn-secondary
          background #23b39d
          border 1px solid #23b39d
          color white
          &:hover
            border 1px solid #3E7BFE
            background #3E7BFE
            color #fff
.produit-box
    height 15rem
    width auto
    position relative
    background-position center center
    background-size cover
    background-repeat no-repeat
    border-radius 2%
    overflow hidden
    box-shadow 0px 1px 2px 0px #D6D6D8
    .price
        position absolute
        z-index 1
        width 30px
        font-size 0.75rem
        right 0
        background #3E7BFE
        padding 5px
        margin-right 10px
        color white
        border-radius 25px
.produitshow
    height 15rem
    width auto
    background-position center center
    background-size cover
    background-repeat no-repeat
    transition: all .2s ease-in-out
    &:hover
        transform scale(1.1)
.four
    margin-bottom 10px
    margin-left 70px
    margin-right -70px


.product__filter
    background-color : lightgray;
    padding-top : 30px;
    padding-bottom : 130px;

    ul
        list-style: none;
        padding-left:5px;
        li
            text-align: left;
            font-size:0.8em;
            &:hover
                cursor : pointer;
    input.product__filter-search
        width:100px;
        display: inline-block;
        -webkit-box-sizing: content-box;
        -moz-box-sizing: content-box;
        box-sizing: content-box;
        padding: 6px 10px;
        border: 1px solid #b7b7b7;
        -webkit-border-radius: 3px;
        border-radius: 3px;
        color: rgba(0,142,198,1);
        -o-text-overflow: clip;
        text-overflow: clip;
        background: rgba(252,252,252,1);
        -webkit-box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset;
        box-shadow: 2px 2px 2px 0 rgba(0,0,0,0.2) inset;
        text-shadow: 1px 1px 0 rgba(255,255,255,0.66) ;
        -webkit-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1);
        -moz-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1);
        -o-transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1);
        transition: all 200ms cubic-bezier(0.42, 0, 0.58, 1);
.produitindex
    background-color white
    height 50px
    width 100%
    border-bottom-left-radius 2%
    border-bottom-right-radius 2%
    position absolute
    bottom 0px
    z-index 80 !important
    
    p
        color black
        text-shadow none
        text-align center
        font-weight 400
        font-size 100%
        
