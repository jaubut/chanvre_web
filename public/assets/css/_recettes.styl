#recettes
    img
        background-size cover
        background-position center center
        background-repeat no-repeat
        max-height 200px
           
    .btn-secondary
          border 1px solid white
          color white
          &:hover
            background  white
            color #F9B42D
    .btn-recette
          border 1px solid white
          background white
          color burlywood
          border-radius 25px
          &:hover
            background  white
            color black
    .btn-print
        display inline
            
    .round-text
        border 1px solid #75c050
          border-radius 100%
    @media (min-width: 800px)
        width 70%
    @media (max-width: 800px)
        width 100%
